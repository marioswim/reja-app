<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/detalles"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.quesada.activities.Detalles">


    <!--<TextView

        android:id="@+id/detalles_nombre_restaurante"
        android:text="Nombre Restaurantes"
        android:paddingLeft="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"/>-->

    <TextView
        android:id="@+id/detalles_rating_medio"
        android:visibility="invisible"
        android:maxLength="4"
        android:paddingRight="16dp"
        android:text="5.0"
        android:textSize="@dimen/preferencia_restaurante"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/detalles_terraza"
        android:layout_alignParentRight="true"/>

    <TextView
        android:id="@+id/detalles_terraza"
        android:layout_marginTop="15dp"
        android:paddingLeft="16dp"
        android:text="Terraza:"
        android:textSize="@dimen/preferencia_restaurante"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/detalles_terraza_opcion"        
        android:paddingLeft="5dp"
        
        android:text=""
        android:textSize="@dimen/preferencia_restaurante"
        android:layout_alignBaseline="@+id/detalles_terraza"
        android:layout_toRightOf="@+id/detalles_terraza"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />




    <View
        android:layout_marginTop="30dp"
        android:layout_below="@+id/detalles_terraza"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:id="@+id/separador_detalles_1"
        android:background="@android:color/darker_gray"/>


    <TextView
        android:id="@+id/detalles_direccion"
        android:layout_marginTop="30dp"
        android:paddingLeft="16dp"
        android:text="DirecciÃ³n:"
        android:textSize="@dimen/preferencia_restaurante"
        android:layout_below="@+id/separador_detalles_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/detalles_direccion_obtenida"
        android:textSize="@dimen/preferencia_restaurante"
        android:paddingLeft="5dp"
        android:text=""
        android:layout_alignBaseline="@+id/detalles_direccion"        
        android:layout_toRightOf="@+id/detalles_direccion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/detalles_telefono"
        android:layout_marginTop="30dp"
        android:paddingLeft="16dp"
        android:text="Telefono:"
        android:textSize="@dimen/preferencia_restaurante"
        android:layout_below="@+id/detalles_direccion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/detalles_numero"
        android:textSize="@dimen/preferencia_restaurante"
        android:paddingLeft="5dp"
        android:text=""
        android:layout_alignBaseline="@+id/detalles_telefono"
        android:layout_toRightOf="@+id/detalles_telefono"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />


    <TextView
        android:id="@+id/detalles_llamar"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"
        android:drawableLeft="@drawable/telefono"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/detalles_telefono"

        />

    <View
        android:id="@+id/separador_detalles_2"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/detalles_llamar"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>
    <RatingBar
        android:id="@+id/detalles_puntuar"
        android:layout_width="wrap_content"
        android:isIndicator="true"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_below="@+id/separador_detalles_2"
        android:layout_marginTop="20dp"
        android:numStars="5"
        android:nestedScrollingEnabled="false"
        android:stepSize="0.5" />
    <Button
        android:id="@+id/detalles_enviar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Puntuar"
        android:layout_below="@+id/detalles_puntuar"
        android:layout_centerHorizontal="true"

        />


</RelativeLayout>
