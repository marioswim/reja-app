<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.quesada.activities.Menu">

    <LinearLayout
        android:id="@+id/botones"
        android:layout_alignParentTop="true"
        android:background="@color/blue_disable"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/recomendacion"
            android:text="Recomendación"
            android:textColor="@color/text"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="11dp"
            android:background="@color/blue_disable"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.5"/>

        <TextView
            android:text="Búsqueda"
            android:textColor="@color/text"
            android:gravity="center"
            android:textStyle="bold"             android:textSize="11dp"
            android:background="@color/blue_disable"
            android:id="@+id/busqueda"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.5"/>

        <TextView
            android:id="@+id/grupos"
            android:text="Grupos"
            android:textColor="@color/text"
            android:gravity="center"
            android:textStyle="bold"             android:textSize="11dp"
            android:background="@color/blue_disable"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.5"/>
        <TextView
            android:id="@+id/ajustes"
            android:text="Ajustes"
            android:textColor="@color/text"
            android:gravity="center"
            android:textStyle="bold"             android:textSize="11dp"
            android:background="@color/blue_disable"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.5"/>
    </LinearLayout>
    <FrameLayout
        android:id="@+id/main_container"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/botones">

    </FrameLayout>

</RelativeLayout>
