<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:paddingBottom="10dp"
    tools:context="com.quesada.fragments.Grupos">

    <LinearLayout
        android:id="@+id/botones_grupos"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="@color/blue_disable"
        >

        <TextView
            android:paddingTop="5dp"
            android:background="@color/blue_disable"
            android:textColor="@color/text"
            android:textStyle="bold"
            android:paddingBottom="5dp"
            android:text="Crear"
            android:gravity="center"
            android:id="@+id/boton_crear_grupo"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:textSize="11dp"
            android:layout_weight="9"
            android:clickable="true"
            android:focusable="true"
            android:editable="false"
            android:elegantTextHeight="false" />
        <View
            android:layout_gravity="center"
            android:layout_weight="0.05"
            android:id="@+id/separador_botones"
            android:layout_width="0dp"
            android:layout_height="45dp"


            android:background="@color/disable"/>
        <TextView
            android:layout_weight="9"
            android:background="@color/blue_disable"
            android:textColor="@color/text"
            android:textStyle="bold"
            android:text="Unirse"
            android:gravity="center"
            android:id="@+id/boton_unirse_grupo"
            android:layout_width="0dp"
            android:textSize="11dp"
            android:layout_height="fill_parent"

            android:focusable="true"

            android:clickable="true"
            android:editable="false"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/separadores_grupos"
        android:layout_below="@+id/botones_grupos"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp">

        <View

            android:layout_weight="1"
            android:id="@+id/separador_crear"
            android:layout_width="fill_parent"
            android:layout_height="3dp"

            android:background="@color/disable"/>
        <View

            android:layout_weight="1"
            android:id="@+id/separador_unirse"
            android:layout_width="fill_parent"
            android:layout_height="3dp"

            android:background="@color/disable"/>


        </LinearLayout>
    <FrameLayout
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:id="@+id/grupos_container"
        android:layout_width="match_parent"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_height="match_parent"
        android:layout_below="@id/separadores_grupos"
        />


</RelativeLayout>
