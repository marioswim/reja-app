<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"

    tools:context="com.quesada.reja.Prueba$PlaceholderFragment">



    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="9.25"
        android:paddingLeft="10dp">

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="6dp"
            android:id="@+id/recomendacion"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:scrollbarStyle="outsideInset"/>

    </RelativeLayout>



    <LinearLayout
        android:layout_weight="0.75"
        android:orientation="horizontal"

        android:layout_width="match_parent"
        android:layout_height="0dp">

        <TextView
            android:background="@color/blue_disable"
            android:textColor="@color/text"
            android:textStyle="bold"
            android:textSize="11dp"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:editable="false"
            android:id="@+id/boton_lista_recomendacion"
            android:text="Lista"/>
        <TextView
            android:textSize="11dp"
            android:background="@color/blue_disable"
            android:textColor="@color/text"
            android:textStyle="bold"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:editable="false"
            android:id="@+id/boton_activar_contexto"
            android:text="contexto"/>
        <TextView
            android:textSize="11dp"
            android:background="@color/blue_disable"
            android:textColor="@color/text"
            android:textStyle="bold"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:editable="false"
            android:id="@+id/boton_geolocalizar"
            android:text="Geolocalizar"/>

    </LinearLayout>


</LinearLayout>
